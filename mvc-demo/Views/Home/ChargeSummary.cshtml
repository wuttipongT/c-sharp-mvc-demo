@{
    ViewBag.Title = "Charge Summary";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Charge Summary
        <small>Summary</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Charge Summary</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- /.box-header -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Charge Summary</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form role="form">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-6">
                       
                                    <div class="form-group">
                                        <label>Month:</label>

                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input class="form-control" id="datepicker" type="text" autocomplete="off">


                                        </div>

                                        <!-- /.input group -->
                                    </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Date range:</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input class="form-control reservation" id="reservation" type="text" autocomplete="off">
                            </div>
                            <!-- /.input group -->
                        </div>
                        <!-- /.form-group -->
                    </div>
                <!-- /.row -->
            </div>
                </div>
            <!-- /.box-body -->
        </form>
        <div class="box-footer">
            <button type="button" class="btn btn-primary">Search</button>
        </div>

    </div>
    <!-- /.box -->
</section>
